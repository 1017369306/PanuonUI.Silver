                                <DropShadowEffect ShadowDepth="0"
                                                  BlurRadius="3"
                                                  Opacity="1"
                                                  Color="{Binding Path=(local:MenuHelper.ShadowColor),RelativeSource={RelativeSource AncestorType=Menu}, Mode=OneWay}" />
                            </Border.Effect>

                        </Border>
                        <StackPanel IsItemsHost="True"
                                    Orientation="Horizontal"
                                    KeyboardNavigation.DirectionalNavigation="Cycle" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
