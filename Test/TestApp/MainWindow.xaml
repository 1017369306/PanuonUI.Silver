<pu:WindowX x:Class="TestApp.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
            xmlns:purs="clr-namespace:Panuon.UI.Silver.Resources;assembly=Panuon.UI.Silver"
            xmlns:pucore="clr-namespace:Panuon.UI.Silver.Core;assembly=Panuon.UI.Silver"
            xmlns:local="clr-namespace:TestApp"
            mc:Ignorable="d"
            Title="Window"
            Height="500"
            Width="700"
            BorderBrush="#0099FF">
    <ListView Margin="20"
              ItemsSource="{Binding Models}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="序列号"
                                DisplayMemberBinding="{Binding Name}"
                                Width="120" />
                <GridViewColumn Header="库存"
                                DisplayMemberBinding="{Binding Message}"
                                Width="60" />
                <GridViewColumn Header="库存"
                                DisplayMemberBinding="{Binding Value}"
                                Width="60" />
            </GridView>
        </ListView.View>
    </ListView>
</pu:WindowX>
