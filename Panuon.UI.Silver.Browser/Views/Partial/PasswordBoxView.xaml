<UserControl x:Class="Panuon.UI.Silver.Browser.Views.Partial.PasswordBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Panuon.UI.Silver.Browser.Views.Partial"
             xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <pu:Carousel x:Name="Carousel">
        <Grid>
            <StackPanel pu:LayoutHelper.ColumnDefinition="*">
                <TextBlock FontSize="20">
                <Run Text="{DynamicResource SourceCodeLocation}"></Run>
                <Run>Views/Partial/PasswordBoxView.xaml</Run>
                </TextBlock>
                <Button pu:ButtonHelper.ButtonStyle="Link"
                        pu:ButtonHelper.HoverBrush="#1D8595"
                        Content="{DynamicResource ViewDocument}"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        Foreground="#1D6F95"
                        Cursor="Hand"
                        Click="BtnDocument_Click" />
                <GroupBox Header="{DynamicResource PasswordBox}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <PasswordBox pu:PasswordBoxHelper.CornerRadius="2"
                                         Height="30"
                                         Width="200" />
                        
                          
                            <PasswordBox Margin="0,10,0,0"
                                         pu:PasswordBoxHelper.CornerRadius="2"
                                         pu:PasswordBoxHelper.Watermark="Watermark"
                                         pu:PasswordBoxHelper.FocusedBorderBrush="{DynamicResource LightGreen}"
                                         pu:PasswordBoxHelper.FocusedShadowColor="{DynamicResource LightGreen_Color}"
                                         BorderBrush="{DynamicResource LightGreen}"
                                         Foreground="{DynamicResource LightGreen}"
                                         Height="30"
                                         Width="200" />
                          
                        
                        </StackPanel>
                        <StackPanel  Margin="10,0,0,0">
                            <PasswordBox pu:PasswordBoxHelper.CornerRadius="2"
                                         pu:PasswordBoxHelper.Icon="&#xf27a;"
                                         Height="30"
                                         Width="200" />
                            <PasswordBox Margin="0,10,0,0"
                                         pu:PasswordBoxHelper.Icon="&#xf27a;"
                                         pu:PasswordBoxHelper.CornerRadius="2"
                                         pu:PasswordBoxHelper.Watermark="Watermark"
                                         pu:PasswordBoxHelper.FocusedBorderBrush="{DynamicResource LightGreen}"
                                         pu:PasswordBoxHelper.FocusedShadowColor="{DynamicResource LightGreen_Color}"
                                         BorderBrush="{DynamicResource LightGreen}"
                                         Foreground="{DynamicResource LightGreen}"
                                         Height="30"
                                         Width="200" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <PasswordBox pu:PasswordBoxHelper.CornerRadius="15"
                                     pu:PasswordBoxHelper.Watermark="Round corner"
                                     Padding="10,0"
                                     Height="30"
                                     Width="200" />
                        <PasswordBox pu:PasswordBoxHelper.CornerRadius="15"
                                     pu:PasswordBoxHelper.Watermark="Round corner"
                                     pu:PasswordBoxHelper.Icon="&#xf27a;"
                                     Padding="0,0,10,0"
                                     Height="30"
                                     Width="200"
                                     Margin="10,0,0,0" />
                        <PasswordBox pu:PasswordBoxHelper.CornerRadius="30"
                                     pu:PasswordBoxHelper.Watermark="Round"
                                     HorizontalContentAlignment="Center"
                                     Padding="0"
                                     Height="60"
                                     Width="60"
                                     Margin="10,0,0,0" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox pu:PasswordBoxHelper.CornerRadius="15"
                                     pu:PasswordBoxHelper.Watermark="Disabled"
                                     Padding="10,0"
                                     Height="30"
                                     Width="200"
                                     IsEnabled="False" />
                        <PasswordBox pu:PasswordBoxHelper.CornerRadius="15"
                                     pu:PasswordBoxHelper.Icon="&#xf27a;"
                                     pu:PasswordBoxHelper.Watermark="Disabled"
                                     Padding="0,0,10,0"
                                     Height="30"
                                     Width="200"
                                     IsEnabled="False"
                                     Margin="10,0,0,0" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button  pu:LayoutHelper.ColumnDefinition="50"
                     pu:ButtonHelper.ButtonStyle="Link"
                     FontFamily="{DynamicResource FontAwesome}"
                     Content="&#xf105;"
                     FontSize="45"
                     Foreground="DimGray"
                     Cursor="Hand"
                     Click="BtnDocument_Click" />
        </Grid>
        <Grid>
            <Button  pu:LayoutHelper.ColumnDefinition="50"
                     pu:ButtonHelper.ButtonStyle="Link"
                     FontFamily="{DynamicResource FontAwesome}"
                     Content="&#xf104;"
                     FontSize="45"
                     Foreground="DimGray"
                     Cursor="Hand"
                     Click="BtnExample_Click" />
            <StackPanel pu:LayoutHelper.ColumnDefinition="*">
                <TextBlock FontSize="20"
                           Text="{DynamicResource Document}" />
                <Button pu:ButtonHelper.ButtonStyle="Link"
                        pu:ButtonHelper.HoverBrush="#1D8595"
                        Content="{DynamicResource ViewExamples}"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        Foreground="#1D6F95"
                        Cursor="Hand"
                        Click="BtnExample_Click" />
            </StackPanel>
        </Grid>
    </pu:Carousel>
</UserControl>
