<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.UI.Silver"
                    xmlns:i="clr-namespace:Panuon.UI.Silver.Internal"
                    xmlns:ic="clr-namespace:Panuon.UI.Silver.Internal.Controls"
                    xmlns:rs="clr-namespace:Panuon.UI.Silver.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/InternalResources.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="TreeView">
        <!--TreeViewHelper-->
        <Setter Property="local:TreeViewHelper.ItemPadding"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardItemPadding}}" />
        <Setter Property="local:TreeViewHelper.ItemHeight"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardItemHeight}}" />
        <Setter Property="local:TreeViewHelper.ToggleBrush"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardToggleBrush}}" />
        <Setter Property="local:TreeViewHelper.HoverToggleBrush"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardHoverToggleBrush}}" />
        <Setter Property="local:TreeViewHelper.HoverBackground"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardHoverBackground}}" />
        <Setter Property="local:TreeViewHelper.SelectedBackground"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardSelectedBackground}}" />
        <!--<Setter Property="local:TreeViewHelper.HoverForeground"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardHoverForeground}}" />
        <Setter Property="local:TreeViewHelper.SelectedForeground"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewStandardSelectedForeground}}" />-->
        <!--VirtualizingStackPanel-->
        <Setter Property="VirtualizingStackPanel.IsVirtualizing"
                Value="True" />
        <Setter Property="VirtualizingStackPanel.VirtualizationMode"
                Value="Recycling" />
        <!--Properties-->
        <Setter Property="BorderBrush"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewBorderBrush}}" />
        <Setter Property="BorderThickness"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewBorderThickness}}" />
        <Setter Property="Background"
                Value="{StaticResource {x:Static i:ResourceKeys.TreeViewBackground}}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeView">
                    <Border x:Name="BdrMain"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer Focusable="False"
                                      Padding="{TemplateBinding Padding}"
                                      VerticalScrollBarVisibility="{Binding Path=(ScrollViewer.VerticalScrollBarVisibility),RelativeSource={RelativeSource AncestorType=TreeView}, Mode=OneWay}"
                                      HorizontalScrollBarVisibility="{Binding Path=(ScrollViewer.HorizontalScrollBarVisibility),RelativeSource={RelativeSource AncestorType=TreeView}, Mode=OneWay}"
                                      CanContentScroll="True">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
