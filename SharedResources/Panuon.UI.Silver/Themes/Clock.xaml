<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.UI.Silver"
                    xmlns:i="clr-namespace:Panuon.UI.Silver.Internal"
                    xmlns:ic="clr-namespace:Panuon.UI.Silver.Internal.Controls"
                    xmlns:rs="clr-namespace:Panuon.UI.Silver.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/InternalResources.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="ClockItemTemplate"
                     TargetType="local:ClockItem">
        <Rectangle Fill="{TemplateBinding Foreground}"
                   Width="{TemplateBinding Width}"
                   Height="{TemplateBinding Height}" />
    </ControlTemplate>

    <Style TargetType="local:ClockItem">
        <Setter Property="Template"
                Value="{StaticResource ClockItemTemplate}" />
        <Style.Triggers>
            <Trigger Property="Hand"
                     Value="Hour">
                <Setter Property="Width"
                        Value="2" />
                <Setter Property="Height"
                        Value="{Binding ActualHeight, Converter={StaticResource {x:Static i:ResourceKeys.DividedBy4Converter}}, RelativeSource={RelativeSource AncestorType=local:Clock}, Mode=OneWay}" />
            </Trigger>
            <Trigger Property="Hand"
                     Value="Minute">
                <Setter Property="Width"
                        Value="1.5" />
                <Setter Property="Height"
                        Value="{Binding ActualHeight, Converter={StaticResource {x:Static i:ResourceKeys.DividedBy3Converter}}, RelativeSource={RelativeSource AncestorType=local:Clock}, Mode=OneWay}" />
            </Trigger>
            <Trigger Property="Hand"
                     Value="Second">
                <Setter Property="Foreground"
                        Value="Red" />
                <Setter Property="Width"
                        Value="1" />
                <Setter Property="Height"
                        Value="{Binding ActualHeight, Converter={StaticResource {x:Static i:ResourceKeys.DividedBy2Converter}}, RelativeSource={RelativeSource AncestorType=local:Clock}, Mode=OneWay}" />
            </Trigger>
        </Style.Triggers>

    </Style>

    <ControlTemplate x:Key="ClockTemplate" 
                     TargetType="local:Clock">
        <Border BorderBrush="{TemplateBinding BorderBrush}"
                Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Ellipse VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Fill="{TemplateBinding Foreground}"
                         Height="5"
                         Width="5" />
                <local:ClockItem RenderTransformOrigin="0.5,1"
                                 HorizontalAlignment="Center"
                                 Hand="Hour" />
                <local:ClockItem RenderTransformOrigin="0.5,1"
                                 HorizontalAlignment="Center"
                                 Hand="Minute" />
                <local:ClockItem RenderTransformOrigin="0.5,1"
                                 HorizontalAlignment="Center"
                                 Hand="Second">
                    <local:ClockItem.RenderTransform>
                        <TransformGroup>
                            <RotateTransform />
                        </TransformGroup>
                    </local:ClockItem.RenderTransform>
                </local:ClockItem>
            </Grid>
        </Border>
    </ControlTemplate>
    
    <Style TargetType="local:Clock">
        <Setter Property="Template"
                Value="{StaticResource ClockTemplate}" />
    </Style>
</ResourceDictionary>
