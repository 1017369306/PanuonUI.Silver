<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.UI.Silver"
                    xmlns:i="clr-namespace:Panuon.UI.Silver.Internal"
                    xmlns:ic="clr-namespace:Panuon.UI.Silver.Internal.Controls"
                    xmlns:rs="clr-namespace:Panuon.UI.Silver.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/Resources.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Resources/InternalResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="{x:Static i:ResourceKeys.TabControlStandardTemplate}"
                     TargetType="TabControl">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <Grid x:Name="GrdMain"
                  KeyboardNavigation.TabNavigation="Local">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="Rd1" Height="Auto" />
                    <RowDefinition x:Name="Rd2" />
                    <RowDefinition x:Name="Rd3" Height="Auto"/>
                    <RowDefinition x:Name="Rd4" />
                    <RowDefinition x:Name="Rd5" Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Cd1" Width="Auto" />
                    <ColumnDefinition x:Name="Cd2" />
                    <ColumnDefinition x:Name="Cd3" Width="Auto" />
                    <ColumnDefinition x:Name="Cd4"/>
                    <ColumnDefinition x:Name="Cd5" Width="Auto" />
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="RectBack"
                           Fill="{Binding Path=(local:TabControlHelper.HeaderPanelBackground),RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"/>
                <ContentControl x:Name="CcFront"
                                Content="{Binding Path=(local:TabControlHelper.FrontControl),RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"/>
                <TabPanel x:Name="TpItems"
                          IsItemsHost="True"/>
                <ContentControl x:Name="CcEnd"
                                Content="{Binding Path=(local:TabControlHelper.EndControl),RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}" />
                <ContentPresenter x:Name="PART_SelectedContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  ContentSource="SelectedContent"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="TabStripPlacement"
                     Value="Top">
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.RowSpan"
                        Value="4" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.ColumnSpan"
                        Value="5" />
                <Setter TargetName="RectBack"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="RectBack"
                        Property="Grid.ColumnSpan"
                        Value="5" />
            </Trigger>
            <Trigger Property="TabStripPlacement"
                     Value="Bottom">
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.RowSpan"
                        Value="4" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.ColumnSpan"
                        Value="5" />
                <Setter TargetName="RectBack"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="RectBack"
                        Property="Grid.ColumnSpan"
                        Value="5" />
            </Trigger>
            <Trigger Property="TabStripPlacement"
                     Value="Left">
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.ColumnSpan"
                        Value="4" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.RowSpan"
                        Value="5" />
                <Setter TargetName="RectBack"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="RectBack"
                        Property="Grid.RowSpan"
                        Value="5" />
            </Trigger>
            <Trigger Property="TabStripPlacement"
                     Value="Right">
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.ColumnSpan"
                        Value="4" />
                <Setter TargetName="PART_SelectedContentHost"
                        Property="Grid.RowSpan"
                        Value="5" />
                <Setter TargetName="RectBack"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="RectBack"
                        Property="Grid.RowSpan"
                        Value="5" />
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Top" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Stretch" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="TpItems"
                        Property="Grid.ColumnSpan"
                        Value="3" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Top" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Center" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Top" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Front" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="Cd2"
                        Property="Width"
                        Value="Auto" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Bottom" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Stretch" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="TpItems"
                        Property="Grid.ColumnSpan"
                        Value="3" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Bottom" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Center" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Bottom" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Front" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="Cd2"
                        Property="Width"
                        Value="Auto" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Left" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Stretch" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="TpItems"
                        Property="Grid.RowSpan"
                        Value="3" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Left" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Center" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="2" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Left" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Front" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="Rd2"
                        Property="Height"
                        Value="Auto" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="2" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="0" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Right" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Stretch" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="TpItems"
                        Property="Grid.RowSpan"
                        Value="3" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Right" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Center" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="2" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TabStripPlacement"
                               Value="Right" />
                    <Condition Property="local:TabControlHelper.HeaderPanelAlignment"
                               Value="Front" />
                </MultiTrigger.Conditions>
                <Setter TargetName="TpItems"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="TpItems"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="Rd2"
                        Property="Height"
                        Value="Auto" />
                <Setter TargetName="CcFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="CcFront"
                        Property="Grid.Column"
                        Value="4" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Row"
                        Value="2" />
                <Setter TargetName="CcEnd"
                        Property="Grid.Column"
                        Value="4" />
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{x:Static i:ResourceKeys.TabControlExpandableTopTemplate}"
                     TargetType="TabControl">

    </ControlTemplate>

    <ControlTemplate x:Key="{x:Static i:ResourceKeys.TabControlScrollableTopTemplate}"
                     TargetType="TabControl">

    </ControlTemplate>

    <Style TargetType="TabControl">
        <!--TabControlHelper-->
        <Setter Property="local:TabControlHelper.ItemsForeground"
                Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="local:TabControlHelper.ItemsHeight"
                Value="30" />
        <Setter Property="local:TabControlHelper.ItemsPadding"
                Value="15,0" />
        <Setter Property="local:TabControlHelper.ItemsBackground"
                Value="Transparent" />
        <!--Properties-->
        <Setter Property="Padding"
                Value="{StaticResource {x:Static i:ResourceKeys.TabControlPadding}}" />
        <Setter Property="BorderBrush"
                Value="{StaticResource {x:Static i:ResourceKeys.TabControlBorderBrush}}" />
        <Setter Property="Background"
                Value="{StaticResource {x:Static i:ResourceKeys.TabControlBackground}}" />
        <Setter Property="BorderThickness"
                Value="{StaticResource {x:Static i:ResourceKeys.TabControlBorderThickness}}" />
        <Setter Property="Template"
                Value="{StaticResource {x:Static i:ResourceKeys.TabControlStandardTemplate}}" />
        <Style.Triggers>
            <Trigger Property="local:TabControlHelper.TabControlStyle"
                     Value="Card">
                <Setter Property="local:TabControlHelper.ItemsSelectedBackground"
                        Value="#3E3E3E" />
                <Setter Property="local:TabControlHelper.ItemsSelectedForeground"
                        Value="#FFFFFF" />
            </Trigger>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Opacity"
                        Value="{StaticResource {x:Static rs:ResourceKeys.DisabledOpacity}}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
