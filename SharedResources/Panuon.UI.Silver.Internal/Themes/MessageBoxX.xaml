    <Style TargetType="ic:MsgBox">
        <Setter Property="SizeToContent"
                Value="WidthAndHeight" />
        <Setter Property="WindowStyle"
                Value="ToolWindow" />
        <Style.Triggers>
            <Trigger Property="MessageBoxStyle"
                     Value="Standard">
                <Setter Property="local:WindowXCaption.Header"
                        Value="" />
                <Setter Property="Content"
                        Value="{StaticResource {x:Static i:ResourceKeys.MsgBoxStandardContent}}" />
                <Setter Property="local:WindowXCaption.CloseButtonStyle">
                    <Setter.Value>
                        <Style TargetType="{x:Type Button}"
                               BasedOn="{StaticResource {x:Static rs:ResourceKeys.WindowXCloseButtonStyle}}">
                            <Setter Property="local:ButtonHelper.ButtonStyle"
                                    Value="Link" />
                        </Style>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="MessageBoxStyle"
                     Value="Classic">
                <Setter Property="Content"
                        Value="{StaticResource {x:Static i:ResourceKeys.MsgBoxClassicContent}}" />
            </Trigger>
            <Trigger Property="MessageBoxStyle"
                     Value="Modern">
                <Setter Property="local:WindowXCaption.Header"
                        Value="" />
                <Setter Property="Content"
                        Value="{StaticResource {x:Static i:ResourceKeys.MsgBoxModernContent}}" />
                <Setter Property="local:WindowXCaption.CloseButtonStyle">
                    <Setter.Value>
                        <Style TargetType="{x:Type Button}"
                               BasedOn="{StaticResource {x:Static rs:ResourceKeys.WindowXCloseButtonStyle}}">
                            <Setter Property="local:ButtonHelper.ButtonStyle"
                                    Value="Link" />
                        </Style>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
