<pu:WindowX x:Class="UIBrowser.Views.MainView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
            xmlns:local="clr-namespace:UIBrowser.Views"
            mc:Ignorable="d"
            Title="MainView"
            Height="700"
            Width="1200">
    <pu:WindowXCaption.Header>
        <TextBlock VerticalAlignment="Center"
                   FontSize="20"
                   Margin="8,0,0,0"
                   FontFamily="Microsoft YaHei UI Light">
            <Run>P A N</Run>
            <Run Foreground="#68D450"> U O N</Run>
        </TextBlock>
    </pu:WindowXCaption.Header>
    <StackPanel Margin="0,15,0,0">
        <StackPanel>
            <Image MaxHeight="20"
                   MaxWidth="40"
                   Source="/Resources/test.jpg"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,5">
            <Button Content="Standard"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    Click="Button_Click"/>
            <Button Content="Hollow"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:ButtonHelper.ButtonStyle="Hollow" />
            <Button Content="Outline"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:ButtonHelper.ButtonStyle="Outline" />
            <Button Content="Link"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:ButtonHelper.ButtonStyle="Link" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,5">
            <Button Content="Standard"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Hollow"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.ButtonStyle="Hollow"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Outline"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:ButtonHelper.ButtonStyle="Outline"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Link"
                    Height="30"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:ButtonHelper.ButtonStyle="Link"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,5">
            <Button Content="Standard"
                    Height="50"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.IconPosition="Top"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Hollow"
                    Height="50"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.ButtonStyle="Hollow"
                    pu:ButtonHelper.IconPosition="Top"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Outline"
                    Height="50"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:ButtonHelper.ButtonStyle="Outline"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.IconPosition="Top"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
            <Button Content="Link"
                    Height="50"
                    Width="120"
                    Margin="0,0,5,0"
                    pu:IconHelper.MaxHeight="20"
                    pu:IconHelper.MaxWidth="20"
                    pu:ButtonHelper.ButtonStyle="Link"
                    pu:IconHelper.Margin="0,0,5,0"
                    pu:ButtonHelper.IconPosition="Top"
                    pu:ButtonHelper.Icon="/UIBrowser;component/Resources/test.jpg" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,5">
            
            <TextBox Width="200"
                     Height="30"
                     pu:IconHelper.Width="20"
                     pu:IconHelper.Height="20"
                     pu:TextBoxHelper.FocusedBorderBrush="LightBlue"
                     pu:TextBoxHelper.FocusedShadowColor="LightBlue"
                     pu:TextBoxHelper.Icon="/UIBrowser;component/Resources/test.jpg"
                     pu:TextBoxHelper.CanClear="True"
                     pu:TextBoxHelper.Watermark="尝试在此输入123"
                     TextChanged="TextBox_TextChanged" 
                     Margin="0,0,5,0"/>
            <PasswordBox Width="200"
                         Height="30"
                         pu:PasswordBoxHelper.FocusedBorderBrush="LightBlue"
                         pu:PasswordBoxHelper.FocusedShadowColor="LightBlue"
                         pu:PasswordBoxHelper.CanPlain="True"
                         pu:PasswordBoxHelper.Watermark="尝试在此输入123"
                         PasswordChanged="PasswordBox_PasswordChanged" />
        </StackPanel>
        <pu:DateTimePicker Height="30"
                           Width="280"
                           ThemeBrush="#FF3094B2" />
                                  
        <Grid Margin="0,5,0,0"
              Width="40"
              Height="5"
              Background="Red">
        </Grid>
    </StackPanel>

</pu:WindowX>
