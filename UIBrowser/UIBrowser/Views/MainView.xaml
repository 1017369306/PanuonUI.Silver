    <pu:RadioButtonGroup x:Name="rdg"
                         Width="300"
                         Height="300"
                         DisplayMemberPath="Name"
                         SelectedValuePath="Value"
                         SelectedValue="{Binding SelectedOption}"
                         SelectionChanged="rdg_SelectionChanged">
        <pu:RadioButtonGroup.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel />
            </ItemsPanelTemplate>
        </pu:RadioButtonGroup.ItemsPanel>
        <pu:RadioButtonGroup.ItemContainerStyle>
            <Style TargetType="RadioButton"
                   BasedOn="{StaticResource {x:Type RadioButton}}">
                <Setter Property="Margin"
                        Value="0,5,5,0" />
                <Setter Property="pu:RadioButtonHelper.RadioButtonStyle"
                        Value="Switch3" />
                <Style.Triggers>
                    <Trigger Property="pu:RadioButtonHelper.RadioButtonStyle"
                             Value="Switch3">
                        <Setter Property="pu:RadioButtonHelper.CheckedBackground"
                                Value="#0099FF" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </pu:RadioButtonGroup.ItemContainerStyle>
    </pu:RadioButtonGroup>
</pu:WindowX>
